<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="br.infnet.diegorezende.hibernate.model.Museu" table="Museu">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="nome" column="nome" type="string"/>
        <property name="pais" column="pais" type="string"/>
        <set name="pinturas" inverse="true" cascade="all">
            <key column="museu_id"/>
            <one-to-many class="br.infnet.diegorezende.hibernate.model.Pintura"/>
        </set>
    </class>
</hibernate-mapping>
